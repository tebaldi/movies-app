<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/ui_layout.panel">
  
  <LinearLayout
    style="@style/ui_matchParent"
    android:orientation="vertical">
  
    <TextView
        style="@style/ui_text.header"
        android:id="@+id/header" />
  
    <ImageView
        style="@style/ui_image.medium"
        android:id="@+id/img"
        android:scaleType="centerCrop" />

    <LinearLayout
      style="@style/ui_layout.subpanel">
    
      <TextView
        style="@style/ui_text.content"
        android:id="@+id/content"/>
    
    </LinearLayout>  
  </LinearLayout>
  
</ScrollView>